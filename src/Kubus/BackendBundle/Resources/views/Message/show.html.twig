{% extends 'KubusBackendBundle::layout.html.twig' %}

{% block content -%}
    <h1>Message</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Subject</th>
                <td>{{ entity.subject }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ entity.message }}</td>
            </tr>
            <tr>
                <th>Personid</th>
                <td>{{ entity.personId }}</td>
            </tr>
            <tr>
                <th>Aboutcourseid</th>
                <td>{{ entity.aboutCourseId }}</td>
            </tr>
            <tr>
                <th>Aboutpersonid</th>
                <td>{{ entity.aboutPersonId }}</td>
            </tr>
            <tr>
                <th>Aboutlessonid</th>
                <td>{{ entity.aboutLessonId }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{{ entity.updatedAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('message') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('message_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
