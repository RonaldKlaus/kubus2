{% extends 'KubusBackendBundle::layout.html.twig' %}

{% block content -%}
    <h1>Course</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Number</th>
                <td>{{ entity.number }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ entity.label }}</td>
            </tr>
            <tr>
                <th>Labelshort</th>
                <td>{{ entity.labelShort }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Programid</th>
                <td>{{ entity.programId }}</td>
            </tr>
            <tr>
                <th>Audienceid</th>
                <td>{{ entity.audienceId }}</td>
            </tr>
            <tr>
                <th>Hours</th>
                <td>{{ entity.hours }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{{ entity.updatedAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Subcategoryid</th>
                <td>{{ entity.subCategoryId }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('course') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('course_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
