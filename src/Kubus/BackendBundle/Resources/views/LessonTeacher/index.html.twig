{% extends 'KubusBackendBundle::layout.html.twig' %}

{% block content -%}
    <h1>LessonTeacher list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Personid</th>
                <th>Lessonid</th>
                <th>Fee</th>
                <th>Hours</th>
                <th>Number</th>
                <th>Year</th>
                <th>Planedhours</th>
                <th>Agreements</th>
                <th>Travelcosts</th>
                <th>Accommodationexpenses</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('lessonteacher_show', { 'id': entity.id }) }}">{{ entity.personId }}</a></td>
                <td>{{ entity.lessonId }}</td>
                <td>{{ entity.fee }}</td>
                <td>{{ entity.hours }}</td>
                <td>{{ entity.number }}</td>
                <td>{{ entity.year }}</td>
                <td>{{ entity.planedHours }}</td>
                <td>{{ entity.agreements }}</td>
                <td>{{ entity.travelCosts }}</td>
                <td>{{ entity.accommodationExpenses }}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.id }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('lessonteacher_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('lessonteacher_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('lessonteacher_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
