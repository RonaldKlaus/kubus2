{% extends 'KubusBackendBundle::layout.html.twig' %}

{% block content -%}
    <h1>Mail</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Senderid</th>
                <td>{{ entity.senderId }}</td>
            </tr>
            <tr>
                <th>Receiverid</th>
                <td>{{ entity.receiverId }}</td>
            </tr>
            <tr>
                <th>Messageid</th>
                <td>{{ entity.messageId }}</td>
            </tr>
            <tr>
                <th>Attachmentname</th>
                <td>{{ entity.attachmentName }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{{ entity.updatedAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('mail') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('mail_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
