{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Teacher list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Personid</th>
                <th>Taxnumber</th>
                <th>Financeoffice</th>
                <th>Accountnumber</th>
                <th>Bankcode</th>
                <th>Bankname</th>
                <th>Firm</th>
                <th>Description</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('teacher_show', { 'id': entity.id }) }}">{{ entity.personId }}</a></td>
                <td>{{ entity.taxNumber }}</td>
                <td>{{ entity.financeOffice }}</td>
                <td>{{ entity.accountNumber }}</td>
                <td>{{ entity.bankCode }}</td>
                <td>{{ entity.bankName }}</td>
                <td>{{ entity.firm }}</td>
                <td>{{ entity.description }}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.id }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('teacher_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('teacher_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('teacher_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
