{% extends 'KubusBackendBundle::layout.html.twig' %}

{% block content -%}
    <h1>Person list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Lastname</th>
                <th>Firstname</th>
                <th>Gender</th>
                <th>Email</th>
                <th>Telephone</th>
                <th>Mobile</th>
                <th>Street</th>
                <th>Postcode</th>
                <th>City</th>
                <th>Country</th>
                <th>Photolink</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Deletedat</th>
                <th>Password</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('person_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.lastname }}</td>
                <td>{{ entity.firstname }}</td>
                <td>{{ entity.gender }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.telephone }}</td>
                <td>{{ entity.mobile }}</td>
                <td>{{ entity.street }}</td>
                <td>{{ entity.postcode }}</td>
                <td>{{ entity.city }}</td>
                <td>{{ entity.country }}</td>
                <td>{{ entity.photoLink }}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.deletedAt %}{{ entity.deletedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.password }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('person_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('person_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('person_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
